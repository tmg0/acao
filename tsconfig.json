{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["es2022"],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "acao": ["src/index.ts"],
      "@core/*": ["src/core/*.ts"]
    },
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "packages", "tests"],
  "exclude": ["node_modules"]
}
